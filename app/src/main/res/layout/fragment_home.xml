<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="40dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinhala Awurudu App"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@android:color/black" />

            <!-- Banner Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/bannerone"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="Awurudu Banner" />

            <!-- Button Section -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:text="අවුරුදු ක්‍රීඩා"
                    android:textColor="@android:color/black"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:text="New Year Rules"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:text="Other"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <!-- Upcoming Nakath Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming nakath"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />

            <!-- Event Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/rounded_bg"
                android:elevation="10dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/event_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Moon Watching"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/event_date_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="April 04th Sunday"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/event_icon_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <!-- Event Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/card_background"
                android:elevation="10dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/event_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bathing for the Old Year"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/event_date_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="April 13th Monday"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/event_icon_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/card_background"
                android:elevation="10dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/event_title_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bathing for the Old Year"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/event_date_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="April 13th Monday"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/event_icon_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>